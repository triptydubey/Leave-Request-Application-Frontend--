<mvc:View xmlns:core="sap.ui.core" 
xmlns:mvc="sap.ui.core.mvc"
xmlns="sap.m"
xmlns:f="sap.ui.layout.form"
xmlns:l="sap.ui.layout" 
xmlns:html="http://www.w3.org/1999/xhtml"
controllerName="leaveappfrontend.controller.detailsLeaveRequests" displayBlock="true">
	<App>
		<pages>
			<Page id= "detailsLeaveRequests" title="Leave Request Details">
				<content>
					<VBox class="sapUiSmallMargin">			
					    <f:SimpleForm id="detailsLeaveRequestsForm"
							editable="true"
							layout="ResponsiveGridLayout"
							title="Leave Request Details"
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false" >
							<f:content>
                                <Label text="Employee Id"/>
								<Input value=""  editable = "false" id = "ownerIdInput"/>
                                <Label text="Leave Type" />
								<Input value="" editable = "false" id = "leaveTypeInput"/>
                                <Label text="Start Date"/>
								<Input value="" editable = "false" id = "startDateInput"/>
								<Label text="End Date" />
								<Input value="" editable = "false" id="endDateInput"/>
                                <Label text="Duration" />
								<Input value="" editable = "false" id = "durationInput"/>
                                <Label text="Note" />
								<Input value="" editable = "false" id = "noteInput"/>
                                <Label text="Status" />
								<Input value=""  editable = "false" id= "statusInput"/>
								<Label text="Approver Name" />
								<Input value =""  editable = "false" id ="approverNameInput"/>								
							</f:content>
						</f:SimpleForm>
					</VBox>
                    <VBox class="sapUiSmallMargin">			
					    <f:SimpleForm id="detailsEmployeesForm"
							editable="true"
							layout="ResponsiveGridLayout"
							title="Employee Details"
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false" >
							<f:content>
                                <Label text="Employee Id"/>
								<Input value=""  editable = "false" id = "employeeIdInput"/>
                                <Label text="First Name"/>
								<Input value="" editable = "false" id = "firstNameInput"/>
								<Label text="Last Name" />
								<Input value="" editable = "false" id="lastNameInput"/>
                                <Label text="Designation" />
								<Input value="" editable = "false" id = "designationInput"/>
                                <Label text="Email" />
								<Input value=""  editable = "false" id= "emailIdInput"/>
								<Label text="Phone" />
								<Input value =""  editable = "false" id ="phoneNumberInput"/>								
							</f:content>
						</f:SimpleForm>
					</VBox>
				</content>
				<footer>
						<OverflowToolbar id="otbFooter">
							<ToolbarSpacer/>
							<Button text="BACK" type="Emphasized" press="onPressBack">
								<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
							</Button>
						</OverflowToolbar>
					</footer>
			</Page>
		</pages>
	</App>
</mvc:View>