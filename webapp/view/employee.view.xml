<mvc:View xmlns:mvc="sap.ui.core.mvc" 
xmlns:core="sap.ui.core"
xmlns:tnt="sap.tnt" 
xmlns="sap.m"
xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
controllerName="leaveappfrontend.controller.employee" displayBlock="true"
> 
	<App>
		<pages>
			<Page id="employee">
					<headerContent>
						<Button icon="sap-icon://log" tooltip="Logout" press="onPressLogout"/>
					</headerContent>
					<content>
							<GenericTile id="viewLeaveTileId" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="View Leave Requests" press="onMoveToViewLeaveRequests" subheader="My Leave Requests">
								<TileContent>
									<ImageContent src="sap-icon://general-leave-request"/>
								</TileContent>
							</GenericTile>
							<GenericTile id="createLeaveTileId" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Create Leave Request" press="onMoveToCreateLeaveRequest" subheader="Create Leave Request">
								<TileContent>
									<ImageContent src="sap-icon://create-leave-request"/>
								</TileContent>
							</GenericTile>
					</content>
				</Page>
		</pages>
	</App>
</mvc:View>
